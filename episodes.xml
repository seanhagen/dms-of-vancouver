---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <itunes:summary>{{ site.description | xml_escape }}</itunes:summary>
    <itunes:subtitle>{{ site.podcast.subtitle | xml_escape }}</itunes:subtitle>
    <itunes:owner>
      <itunes:name>{{ site.podcast.author.name | xml_escape }}</itunes:name>
      <itunes:email>{{ site.podcast.author.email | xml_escape }}</itunes:email>
    </itunes:owner>
    <itunes:image href="{{ site.url}}{{ site.podcast.image }}"/>
    <itunes:category text="Games &amp; Hobbies">
      <itunes:category text="Other Games" />
    </itunes:category>
    <itunes:explicit>no</itunes:explicit>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.episodes limit:10 %}
    {% unless post.link %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <itunes:author>{{ site.podcast.author.name | xml_escape }}</itunes:author>
      <itunes:subtitle>{{ post.subtitle | xml_escape }}</itunes:subtitle>
      <itunes:summary><![CDATA[{{ post.excerpt | xml_escape }}]]></itunes:summary>
      <itunes:duration>{{ post.duration}}</itunes:duration>
      <itunes:explicit>no</itunes:explicit>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
      <enclosure length="{{ post.audio_length }}"
                 type="{{ post.audio_type }}"
                 url="{{ site.url }}/{{ post.audio_url}}" />
      <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
      {% if post.excerpt %}
      <description>{{ post.excerpt | xml_escape }}</description>
      {% else %}
      <description>{{ post.content | xml_escape }}</description>
      {% endif %}
      {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
      {% for cat in post.categories %}
      <category>{{ cat | xml_escape }}</category>
      {% endfor %}
    </item>
    {% endunless %}
    {% endfor %}
  </channel>
</rss>
